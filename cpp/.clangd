CompileFlags:
  Add:
    - -Wall
    - -Wextra
    - -I./cpp/include

CompileDatabase:
  Import:
    - ./

Index:
  Background: Build

ResourceDir: /usr/bin/clang

Diagnostics:
  ClangTidy:
    Add: []

Completion:
  AllScopes: true
  FilterAndSort: true
  IncludeFixer: true
  LimitResults: 100

Format:
  Enable: true

Hover:
  ShowComments: true